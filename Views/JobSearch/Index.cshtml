@model IEnumerable<JobSearch.Models.JobSearchModel>

@{
    ViewData["Title"] = "Job Details Page";
}

<style>
    h1 {
        font-size: 2rem;
        text-align: center;
        margin: 1rem 0;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

        .table th,
        .table td {
            padding: 0.5rem;
            text-align: center;
            border: 1px solid #ccc;
        }

        .table th {
            background-color: #E6E6FA;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f8f8f8;
        }

    .float-end {
        float: right;
        margin-left: 1rem;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 8px 16px;
        text-decoration: none;
        margin-top: 8px;
        margin-bottom: 8px;
        cursor: pointer;
        border-radius: 4px;
    }
    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }


</style>
<h1>Job Details</h1>
<br/>
@using (Html.BeginForm())
{
    <p class="float-end">
        Find by name: @Html.TextBox("searchQuery")
        <input type="submit" class="float-end" value="Search" formmethod="post" />
    </p>
}
<br/>
<p>
    <a asp-action="Create">Create New</a> |

    <br />

    <div></div>
</p>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cmpy_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cmpy_Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Req_exp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placed_emp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cmpy_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cmpy_Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Req_exp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placed_emp)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
