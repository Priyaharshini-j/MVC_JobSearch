        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cmpy_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cmpy_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cmpy_Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cmpy_Location)
        </dd>
        <dt class = "col-sm-2">
